<h1>All Blog Posts</h1>

<div class="posts">
  {{#each posts}}
    <article class="post">
      <h3><a href="/posts/{{this.id}}">{{this.title}}</a></h3>
      <p>{{truncate this.content 150}}</p>
      <time datetime="{{formatDate this.created_at}}">{{formatDate this.created_at}}</time>
    </article>
  {{/each}}
</div>